# ============================================
# ENVIRONMENT VARIABLES
# BayernAnkauf Marketplace
# ============================================

# Database (PostgreSQL via Neon/Supabase/Railway)
DATABASE_URL="postgresql://user:password@localhost:5432/bayernankauf?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"

# Email Provider (Nodemailer/SendGrid)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@bayernankauf.de"

# Payment Provider
# Options: MOCK, STRIPE, MOLLIE, SEPA
PAYMENT_PROVIDER="MOCK"

# Stripe (if PAYMENT_PROVIDER=STRIPE)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Mollie (if PAYMENT_PROVIDER=MOLLIE)
# MOLLIE_API_KEY="test_..."

# Encryption Key for sensitive data (IBAN, etc.)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# Vercel (auto-set in production)
# VERCEL_URL is auto-set by Vercel

# Application Settings
NODE_ENV="development"
SKIP_ENV_VALIDATION="false"

# Rate Limiting (optional overrides)
# RATE_LIMIT_AUTH_MAX="5"
# RATE_LIMIT_AUTH_WINDOW_MS="900000"
# RATE_LIMIT_API_MAX="100"
# RATE_LIMIT_API_WINDOW_MS="60000"
